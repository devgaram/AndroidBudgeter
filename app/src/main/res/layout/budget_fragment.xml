<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.design.card.MaterialCardView
            android:id="@+id/all_budget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:minHeight="150dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:contentPadding="10dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="전체 예산"
                    android:fontFamily="@font/nanumsquareeb"
                    android:textSize="@dimen/font_xxxs"
                    android:textColor="@color/my_app_text_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquarel"
                            android:textSize="@dimen/font_xxxs"
                            android:textColor="@color/my_app_text_color"
                            android:text="D-"/>
                        <TextView
                            android:id="@+id/all_budget_remain_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25"
                            android:fontFamily="@font/nanumsquarel"
                            android:textSize="@dimen/font_xxxs"
                            android:textColor="@color/my_app_text_color"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">
                        <TextView
                            android:id="@+id/all_budget_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80,000"
                            android:fontFamily="@font/nanumsquareeb"
                            android:textSize="@dimen/font_s"
                            android:textColor="@color/my_app_text_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:fontFamily="@font/nanumsquareeb"
                            android:textSize="@dimen/font_xxs"
                            android:textColor="@color/my_app_text_color"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/all_budget_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150,000"
                            android:fontFamily="@font/nanumsquarel"
                            android:textSize="@dimen/font_xxxs"
                            android:textColor="@color/my_app_text_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquarel"
                            android:textSize="@dimen/font_xxxs"
                            android:textColor="@color/my_app_text_color"
                            android:text="원"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:id="@+id/today_budget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:minHeight="150dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:contentPadding="10dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="오늘의 예산"
                    android:fontFamily="@font/nanumsquareeb"
                    android:textSize="@dimen/font_xxxs"
                    android:textColor="@color/my_app_text_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/today_budget_remain_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90"
                            android:fontFamily="@font/nanumsquarel"
                            android:textSize="@dimen/font_xxxs"
                            android:textColor="@color/my_app_text_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquarel"
                            android:textSize="@dimen/font_xxxs"
                            android:textColor="@color/my_app_text_color"
                            android:text="%"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">
                        <TextView
                            android:id="@+id/today_budget_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,500"
                            android:fontFamily="@font/nanumsquareeb"
                            android:textSize="@dimen/font_s"
                            android:textColor="@color/my_app_text_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:fontFamily="@font/nanumsquareeb"
                            android:textSize="@dimen/font_xxs"
                            android:textColor="@color/my_app_text_color"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/today_budget_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15,000"
                            android:fontFamily="@font/nanumsquarel"
                            android:textSize="@dimen/font_xxxs"
                            android:textColor="@color/my_app_text_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquarel"
                            android:textSize="@dimen/font_xxxs"
                            android:textColor="@color/my_app_text_color"
                            android:text="원"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.design.card.MaterialCardView>
    </LinearLayout>

</FrameLayout>